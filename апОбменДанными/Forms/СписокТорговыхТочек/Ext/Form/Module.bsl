&НаКлиенте
Процедура ОбработкаВыбора(ВыбранноеЗначение, ИсточникВыбора)
	
	ИмяТипаСправочника = "СправочникСсылка." + СтррКонтекст.СпрТоргТочки.ВидСправочника;
	
	Если ТипЗнч(ВыбранноеЗначение) <> Тип("Массив") Тогда
		ВызватьИсключение(СтрШаблон_(НСтр("ru = 'Не предусмотренное значение для подбора в форму: %1'; uk = 'Не передбачене значення для підбору в форму: %1'"), 
											ВыбранноеЗначение));
	КонецЕсли;
	
	ПервыйЭлементВыбора = ВыбранноеЗначение[0];
	
	Если ТипЗнч(ПервыйЭлементВыбора) = Тип("СправочникСсылка.Сотрудники") Тогда //унф
		
		СтррКонтекст.Сотрудник = ПервыйЭлементВыбора; // запоминаем пользователя - чтобы при повторном подборе он был уже выбран в списке
		мВыбранныеКонтрагенты = ПолучитьКонтрагентовПоОтветственному(ВыбранноеЗначение); // получаем массив выбранных контрагентов на основе выбранного списка сотрудников (по реквизиту Ответственный)
		
	ИначеЕсли ТипЗнч(ПервыйЭлементВыбора) = Тип(ИмяТипаСправочника) Тогда  
		
		мВыбранныеКонтрагенты = ВыбранноеЗначение;
		
	Иначе
		
		Текст = СтрШаблон_(НСтр("ru = 'Выбрано значение (""%1"") для подбора не предусмотренного типа ""%2""!'; uk = 'Обрано значення (""%1"") для підбору не передбаченого типу ""%2""!'"), ПервыйЭлементВыбора, ТипЗнч(ПервыйЭлементВыбора));
		ВызватьИсключение(Текст);
	
	КонецЕсли; 
	
	ВсегоВыбрано = мВыбранныеКонтрагенты.Количество();
	Если ВсегоВыбрано = 0 Тогда
		Текст = СтрШаблон_(НСтр("ru='Не выбрано ни одного элемента из справочника ""%1"".';uk='Не вибрано жодного елемента з довідника ""%1"".'"), СтррКонтекст.СпрТоргТочки.Синоним);
		ПоказатьПредупреждение(Неопределено, Текст);
		Возврат;
	КонецЕсли; 
	
 	мНовыеКонтрагенты = Новый Массив; // массив добавленных партнеров во время подбора
	СтрокаТ = Неопределено;
	НачальнаяСтрока = Состав.Количество();
	
	ИмяКолонки = СтррКонтекст.СпрТоргТочки.тзИмяКолонки;
	стррПоиск = Новый Структура(ИмяКолонки);
	
	// подбор партнеров
	Для каждого Партнер Из мВыбранныеКонтрагенты Цикл
		
		стррПоиск[ИмяКолонки] = Партнер;
		мСтроки = Состав.НайтиСтроки(стррПоиск);
		Если мСтроки.Количество() > 0 Тогда // в таблице уже есть такой партнер
			Если ВсегоВыбрано = 1 Тогда
				СтрокаТ = мСтроки[0]; // выделяем найденную строку:
				Текст = СтрШаблон_(НСтр("ru='Данный %1 уже присутствует в таблице.';uk='Даний %1 вже присутній в таблиці.'"), СтррКонтекст.СпрТоргТочки.Представление);
				ПоказатьПредупреждение(, Текст);
				Прервать;
			Иначе
				Текст = СтрШаблон_(НСтр("ru='Пропущен %1 ""%2"" т.к. он уже присутствует в таблице.';uk='Пропущений %1 ""%2"" тому що він вже присутній в таблиці.'"), СтррКонтекст.СпрТоргТочки.Представление, Партнер);
				ОбщегоНазначенияКлиентСервер.СообщитьПользователю(Текст);
			КонецЕсли;
		Иначе
			СтрокаТ = Состав.Добавить();
			СтрокаТ[ИмяКолонки] = Партнер;
			мНовыеКонтрагенты.Добавить(Партнер);
		КонецЕсли;
	
	КонецЦикла;
	
	Если СтрокаТ <> Неопределено Тогда
		Элементы.Состав.ТекущаяСтрока = СтрокаТ.ПолучитьИдентификатор();
	КонецЕсли; 
	
	Если мНовыеКонтрагенты.Количество() <> 0 Тогда
		ОбновитьАдресаКонтрагентов(мНовыеКонтрагенты, НачальнаяСтрока);
		
		//унф
		//Если СтррКонтекст.СпрТоргТочки.ВидСправочника = "алкПунктыРазгрузки" Тогда 
		//	ОбновитьКонтрагентов(НачальнаяСтрока);
		//КонецЕсли;
		
		УстановитьМодифицированостьФормы(Истина);
	КонецЕсли; 
	
КонецПроцедуры

&НаКлиенте
Процедура ОбработкаОповещения(ИмяСобытия, Параметр, Источник)

	Если ИмяСобытия = "АПНастройкиСброшены" Тогда
		
		ЭтаФорма.Модифицированность = Ложь;
		Закрыть();

	ИначеЕсли ИмяСобытия = "АППроверкаУникальностиЗапускаОбработкиОбмена" Тогда
		
		Если Параметр <> СтррКонтекст.ВХОбщиеПараметры Тогда // второй экземпляр обработки спрашивает - уже открыта обработка или нет
			Если ЭтаФорма.Открыта() Тогда
				Оповестить("АПЗакрытьОбработкуОбменДанными", Параметр); // шлем событие закрытия обработки с конкретным ключем сеанса			
			Иначе
				ЭтотОбъект.Закрыть();
			КонецЕсли; 
		КонецЕсли;
		
	ИначеЕсли ИмяСобытия = "АПНастройкиПараметровОбменаИзмененияЗаписаны" Тогда
		
		СтррКонтекст.НастройкиВыгрузкиМаршрутов = ПрочестьНастройкиВыгрузкиМаршрутовИзХранилища();
		ОбновитьПредупреждениеОНастройкахОбмена();
		
	КонецЕсли;

